#include<iostream>
using namespace std;
int main()
{
cout<<"calculator menu";
cout<<"\n enter 1 for addition";
cout<<"\n enter 2 for subtraction";
cout<<"\n enter 3 for multiplication";
cout<<"\n enter 4 for division";
cout<<"\nselect your choice:";
int n;
cin>>n;
int a,b;
cout<<"enter two numbers";
cin>>a>>b;
switch(n)
{
case 1:
cout<<"addition is:";
cout<<a+b;
break;
case 2:
cout<<"\nsubtraction is:";
cout<<a-b;
break;
case 3:
cout<<"\nmultipication is :";
cout<<a*b;
break;
case 4:
cout<<"\ndivision is:";
cout<<a/b;
break;
case 5:
cout<<"\nmodulus is:";
cout<<a%b;
break;
return 0;
}
}
